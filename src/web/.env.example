# Application name and version for metadata
VITE_APP_NAME=Identity Matrix
VITE_APP_VERSION=1.0.0

# API Configuration
# Base URL for API endpoints (use HTTPS in production)
VITE_API_BASE_URL=http://localhost:3000
# API timeout in milliseconds (max 500ms for performance requirements)
VITE_API_TIMEOUT=500
# Number of API retry attempts on failure (1-5)
VITE_API_RETRY_ATTEMPTS=3
# Delay between retry attempts in milliseconds
VITE_API_RETRY_DELAY=1000

# WebSocket Configuration
# WebSocket server URL (use WSS in production)
VITE_WS_URL=ws://localhost:3000
# Maximum WebSocket reconnection attempts
VITE_WS_RECONNECT_ATTEMPTS=3
# Delay between reconnection attempts in milliseconds
VITE_WS_RECONNECT_DELAY=1000
# WebSocket connection timeout in milliseconds
VITE_WS_TIMEOUT=5000
# WebSocket ping interval for connection maintenance in milliseconds
VITE_WS_PING_INTERVAL=30000
# WebSocket ping timeout in milliseconds
VITE_WS_PING_TIMEOUT=5000

# Security Configuration
# Enable secure cookies for session management (required in production)
VITE_SECURE_COOKIES=true
# Session timeout in milliseconds (1 hour)
VITE_SESSION_TIMEOUT=3600000